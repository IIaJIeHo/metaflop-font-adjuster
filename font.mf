%%%%% DIMENSION %%%%%%

font_size:=10pt#;% font size  / nicht verstellbar  		
ht#:=10pt#;      % box height / nicht verstellbar		
u#:=0.95pt#;     % unit widht 					$ 0.8 / 2
px#:=0.1pt#;     % pen width 					$ 0.15 / 1.8 
py#:=0.1pt#;     % pen height	
				
%%%%% PROPORTION %%%%%%

cap#:=1.0ht#;    % cap heigt					$ 0.75 / 1	
bar#:=0.5ht#;    % bar height					$ 0.3 / 0.8

%%%%% SHAPE %%%%%

ang:=45;         % glyph angle setting                           $ 0 / 2
penang:=45;      % pen angle setting
penshape:=1;     % 1=circle / 2=square / 3=razor

%%%%% export %%%%%

sidebearing:=0;    % switch sidebearings off (0) for .otf export, (1) for on


input glyphs;
bye;

