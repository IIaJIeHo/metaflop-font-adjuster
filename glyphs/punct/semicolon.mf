% box dimension definition %
beginadjchar(oct"073",2,cap#,0);

% sidebearings %
if (sidebearing=1):
numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);fi

% construction %
x1=x2=x3=x4=.5w;
y1=0;
y2=-bar1;
y3=bar3;
y4=bar3-.3bar1;

% draw %
draw z3---z4;
draw z1---z2;

penlabels(range 0 thru 30);

endchar;