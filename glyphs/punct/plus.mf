% box dimension definition %
beginadjchar(oct"053",3,cap#,0);

% sidebearings %
if (sidebearing=1):
numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);fi

% construction %
x1=leftstemloc;
x2=w-x1;
x3=x4=0.5w;
y1=y2=bar2;
y3=bar3;
y4=bar1;

% draw %
draw z1---z2;
draw z3---z4;

penlabels(range 0 thru 30);

endchar;