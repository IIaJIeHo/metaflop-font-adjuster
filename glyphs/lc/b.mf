% box dimension definition %
beginadjchar("b",5,cap#,0);

% construction %
x1=x2=x6=x7=leftstemloc;
x3=x10=w-x6;
x5=x8;
x4=x9;
y1=h;
y2=y8=y9=0;
y10=y7=bar1;
y3=y6=bar2;
y4=y5=bar3;
z5=z6+whatever*dir(ang); 
z9=z10+whatever*dir(ang); 

% draw %
draw z3---z4---z5---z6---z7---z8---z9---z10---z3;
draw z1---z2;

penlabels(range 0 thru 30);

endchar;