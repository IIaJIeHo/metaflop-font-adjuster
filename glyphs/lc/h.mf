% box dimension definition %
beginadjchar("h",5,cap#,0);

% sidebearings %
if (sidebearing=1):
numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);fi

% construction %
x1=x3=x2=leftstemloc;
x6=x7=w-x1;
y1=h;
y2=y7=0;
y3=y6=bar2;
y4=y5=bar3;
z3=z4+whatever*dir(ang); 
z5=z6+whatever*dir(-ang); 

% draw %
draw z2---z3---z4---z5---z6---z7;
draw z1---z2;

penlabels(range 0 thru 30);

endchar;