% box dimension definition %
beginadjchar(oct"257",3,cap#,0);

% sidebearings %
if (sidebearing=1):
numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);fi

% construction %
x1=x2=x3=x10=leftstemloc;
x5=w-x1;
y2=y8=0;
y10=y7=bar1;
y3=bar2;
y1=y4=y5=bar3;
z3=z4+whatever*dir(ang);
x13=.2w;
x12=.8w;
y12=bar5;
y13=bar5-0.5bar1;

% draw %
draw z3---z4---z5;
draw z1---z2;
draw z12---z13;

penlabels(range 0 thru 30);

endchar;