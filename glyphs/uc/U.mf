%%% box dimension definition %%%

beginadjchar("U",5,cap#,0);

%%% sidebearings %%%

if (sidebearing=1):

numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);

fi

%%% construction %%%

x1=x2=w-x5=leftstemloc;
x6=x5;

z3=z2+whatever*dir-(ang);   
z5=z4+whatever*dir(ang);

y3=y4=0;
y1=y6=h;
y2=y5=bar1;

draw z1--z2--z3--z4--z5--z6;

%penlabels(range 0 thru 30);	% labeling of pen positions including l and r, on greyfont outputs


endchar;


