%%% box dimension definition %%%

beginadjchar("J",5,cap#,0);

%%% sidebearings %%%

if (sidebearing=1):

numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);

fi

%%% construction %%%

x1=w-x4=leftstemloc;
x4=x5;

z1=z2+whatever*dir-(ang);   
z3=z4+whatever*dir(ang);

y1=y4=bar1;
y2=y3=0;

y5=h;

% draw z1--z2--z3--z4--z5;	% original Adjuster

draw z1--z2---z3--z4---z5;	% original Adjuster

% penlabels(range 0 thru 30);	% labeling of pen positions including l and r, on greyfont outputs


endchar;


