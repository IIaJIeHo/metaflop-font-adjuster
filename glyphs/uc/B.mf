%%% box dimension definition %%%

beginadjchar("B",5,cap#,0);

%%% sidebearings %%%

if (sidebearing=1):

numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);

fi



%%% construction %%%

x1=x2=x3=w-x9=leftstemloc;
x9=x8=x5;

z9=z10+whatever*dir(ang);   
z8=z7+whatever*dir-(ang);
z6=z7+whatever*dir(ang);   
z4=z5+whatever*dir-(ang);

y1=y10=0;
y9=bar1;
y8=bar2;
y2=y7=bar;

y6=bar4;
y5=bar5;
y3=y4=h;
%top y8= top y9=h;
%draw z1--z2--z3--z4..z5..z6..z7--z2 & z2--z7..z8..z9..z10--cycle;	% straight and round Adjuster
%draw z1--z2--z3---z4..z5..z6..z7---z2 & z2---z7..z8..z9..z10---cycle;	% round Adjuster (works best with angle 35)
draw z1--z3--z4--z5--z6--z7--z8--z9--z10--cycle;	% original Adjuster
draw z2--z7;

%penlabels(range 0 thru 30);	% labeling of pen positions including l and r, on greyfont outputs


endchar;


