%%% box dimension definition %%%

beginadjchar("S",5,cap#,0);

%%% sidebearings %%%

if (sidebearing=1):

numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);

fi

%%% construction %%%

x1=x6=x7=w-x5=leftstemloc;
x4=x5=x10;


z2=z1+whatever*dir(-ang);   
z3=z4+whatever*dir(ang);
z8=z7+whatever*dir(ang);
z9=z10+whatever*dir-(ang);

y2=y3=0;
y8=y9=h;

y7=y10=bar5;
y6=bar4;
y5=bar2;
y1=y4=bar1;

draw z1--z2--z3--z4--z5--z6--z7--z8--z9--z10;

% penlabels(range 0 thru 30);	% labeling of pen positions including l and r, on greyfont outputs


endchar;


