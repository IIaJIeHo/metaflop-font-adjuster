%%% box dimension definition %%%

beginadjchar("G",5.5,cap#,0);

%%% sidebearings %%%

if (sidebearing=1):

numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);

fi

%%% construction %%%

x1=x2=w-x8=leftstemloc;
x8=x7=x5;
x6=.5(x8-x1);
y8=y1=1/6h;
y2=y5=5/6h;
z2=z3+whatever*dir(ang);   
z9=z8+whatever*dir(ang);
z4=z5+whatever*dir-(ang);
z1=z10+whatever*dir-(ang);
y10=y9=0;
y3=y4=h;
y6=y7=bar;
draw z6--z7--z8--z9--z10--z1--z2--z3--z4--z5;

%penlabels(range 0 thru 30);	% labeling of pen positions including l and r, on greyfont outputs


endchar;


