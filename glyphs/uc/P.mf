% box dimension definition %
beginadjchar("P",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.35u#,space*0.15u#);

% construction %
x1=x2=x3=leftstemloc;
x5=x6=w-x1;
x4=x7;
y3=y4=h;
y1=0;
y2=y7=bar3;
y6=bar4;
y5=bar5;
z4=z5+whatever*dir-(ang);   

% draw %
draw z1--z3--z4--z5--z6--z7--z2;

% composite glyphs %
charanchortops_[charcode]=(.5w,h+bar2);

penlabels(range 0 thru 30);

endchar;