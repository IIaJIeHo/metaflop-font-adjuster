%%% box dimension definition %%%

beginadjchar("Q",5.5,cap#,0);

%%% sidebearings %%%

if (sidebearing=1):

numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);

fi

%%% construction %%%

x1=x2=w-x5=leftstemloc;
x5=x6=x10;

z2=z3+whatever*dir(ang);   
z7=z6+whatever*dir(ang);
z1=z8+whatever*dir-(ang);
z4=z5+whatever*dir-(ang);
z9=z10+whatever*dir-(ang);
y8=y7=y10=0;

y3=y4=h;

y2=y5=5/6h;
y1=y6=y9=1/6h;
draw z1--z2--z3--z4--z5--z6--z7--z8--cycle;
draw z9--z10;

%penlabels(range 0 thru 30);	% labeling of pen positions including l and r, on greyfont outputs


endchar;


