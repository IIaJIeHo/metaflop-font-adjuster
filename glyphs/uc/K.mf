%%% box dimension definition %%%

beginadjchar("K",5,cap#,0);

%%% sidebearings %%%

if (sidebearing=1):

numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);

fi

%%% construction %%%

x1=x2=x3=w-x5=leftstemloc;
x5=x4=x6;
y1=y6=0;
y5=y2=bar;
y3=y4=h;
draw z1--z3;
draw z2--z6;
draw z2--z4;

%penlabels(range 0 thru 30);	% labeling of pen positions including l and r, on greyfont outputs


endchar;


