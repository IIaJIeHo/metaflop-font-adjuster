% box dimension definition %
beginadjchar("D",5,cap#,0);

% sidebearings %
numeric l,r;
normal_adjust_fit(space*0.35u#,space*0.3u#);

% construction %
x1=x2=leftstemloc;
x4=x5=w-x1;
x3=x6;
y2=y3=h;
y1=y6=0;
y4=bar5;
y5=bar1;
z6=z5+whatever*dir(ang);   

% draw %
draw z1---z2---z3---z4---z5---z6---cycle;

% composite glyphs %
charanchortops_[charcode]=(.45w,h+1/6cap);

penlabels(range 0 thru 30);

endchar;