% box dimension definition %
beginadjchar(oct"301",5,cap#,0);

if known ps output:
glyph name "Adieresis"; fi

% sidebearings %
if (sidebearing=1):
numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);fi

% construction %
x1=leftstemloc;
x3=w-x1;
x2=.5w;
y1=y3=0;
y2=h;
y4=y5=bar3;
z4=whatever[z1,z2];
z5=whatever[z2,z3];
x13=.3w;
x12=.7w;
y12=h+bar1;
y13=h+0.5bar1;

% draw %
draw z1---z2---z3;
draw z4---z5;
draw z12---z13;

penlabels(range 0 thru 30);

endchar;