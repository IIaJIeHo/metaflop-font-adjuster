%%% box dimension definition %%%

beginadjchar("3",5,cap#,0);

%%% sidebearings %%%

if (sidebearing=1):

numeric l,r;
normal_adjust_fit(space*0.3u#,space*0.3u#);

fi



%%% construction %%%

x1=x11=w-x8=leftstemloc;
x8=x7=x5=x4;

z10=z11+whatever*dir-(ang); 
z9=z8+whatever*dir(ang); 

z7=z6+whatever*dir-(ang); 

z4=z3+whatever*dir-(ang); 
z2=z1+whatever*dir(ang); 

y10=y9=0;
y11=y8=bar1;
y7=bar2;

y6=bar;

y5=bar4;
y1=y4=bar5;
y2=y3=h;

draw z1--z2---z3--z4---z5--z6 & z6--z7---z8--z9---z10--z11;	% original Adjuster

penlabels(range 0 thru 30);	% labeling of pen positions including l and r, on greyfont outputs


endchar;


